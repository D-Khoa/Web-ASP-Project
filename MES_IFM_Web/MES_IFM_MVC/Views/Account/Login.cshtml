@model MES_IFM_MVC.Models.Account.aa0001

@{
    ViewData["Title"] = "Login";
}


@section Scripts{
    <script>
        $(function () {
            $("#menu-user").hide();
            $("#btn-login").hide();
        });
    </script>
}

<div class="form-card">
    <h1>Login</h1>
    <form method="post">
        <div class="text-danger">@ViewBag.Message</div>
        <div class="form-group">
            <label asp-for="aa0001c13" class="control-label">Email</label>
            <input asp-for="aa0001c13" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="aa0001c21" class="control-label">Password</label>
            <input type="password" asp-for="aa0001c21" class="form-control" />
        </div>
        <div class="form-group" style="text-align:center;">
            <a asp-action="/Register" class="btn form-card-btn">Register</a>
            <button type="submit" asp-action="Login" asp-controller="Account" class="btn form-card-btn">Login</button>
        </div>
    </form>
</div>

