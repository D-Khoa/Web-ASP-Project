@model MES_IFM_MVC.Models.Account.aa0001

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="text-danger">@ViewBag.Message</div>
            <div class="form-group">
                <label asp-for="aa0001c13" class="control-label">Email</label>
                <input asp-for="aa0001c13" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="aa0001c21" class="control-label">Password</label>
                <input type="password" asp-for="aa0001c21" class="form-control" />
            </div>
            <button type="submit" asp-action="Login" asp-controller="Account" class="btn btn-success">Login</button>
            <a asp-action="/Register" class="btn btn-success">Register</a>
        </form>
    </div>
</div>

