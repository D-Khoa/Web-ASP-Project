<div id="add-popup" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form asp-action="Create" method="post" class="modal-content rounded-lg shadow-lg">
            <div class="modal-header">
                <h4 class="modal-title">Add New PLC</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">PLC Code</label>
                    <input name="shiftCode" class="form-control input-bg" />
                </div>
                <div class="form-group">
                    <label class="control-label">IP Address</label>
                    <input name="shiftName" class="form-control input-bg" />
                </div>
                <div class="form-group">
                    <label class="control-label">Model</label>
                    <input type="text" name="beginTime" class="form-control input-bg" />
                </div>
                <div class="form-group">
                    <label class="control-label">Line</label>
                    <select class="form-control input-bg">
                        <option value="">L01</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Process</label>
                    <select class="form-control input-bg">
                        <option>P001</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Confirm</button>
            </div>
        </form>
    </div>
</div>

<div id="update-popup" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form asp-action="Edit" method="post" class="modal-content rounded-lg shadow-lg">
            <div class="modal-header">
                <h4 class="modal-title">Update work shift</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="selected-id" type="hidden" name="shiftID" />
                <div class="form-group">
                    <label class="control-label">Shift Code</label>
                    <input id="selected-code" name="shiftCode" class="form-control input-bg" />
                </div>
                <div class="form-group">
                    <label class="control-label">Shift Name</label>
                    <input id="selected-name" name="shiftName" class="form-control input-bg" />
                </div>
                <div class="form-group">
                    <label class="control-label">Begin Time</label>
                    <input id="selected-beginTime" type="time" name="beginTime" class="form-control input-bg" />
                </div>
                <div class="form-group">
                    <label class="control-label">End Time</label>
                    <input id="selected-endTime" type="time" name="endTime" class="form-control input-bg" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Confirm</button>
            </div>
        </form>
    </div>
</div>

<div id="delete-popup" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form asp-action="Delete" method="post" class="modal-content rounded-lg shadow-lg">
            <div class="modal-header">
                <h4 class="modal-title">Delete work shift</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="delete-id" type="hidden" name="id" />
                <p class="text-body">
                    Are you sure delete the work shift name:
                    <label class="text-danger" id="delete-name" /> ?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger">Confirm</button>
            </div>
        </form>
    </div>
</div>

<script>
    $('#update-popup').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var id = button.data('id') // Extract info from data-* attributes
        var code = button.data('code')
        var name = button.data('name')
        var beginTime = button.data('beginTime')
        var endTime = button.data('endTime')

        var modal = $(this)
        modal.find('#selected-id').val(id);
        modal.find('#selected-code').val(code);
        modal.find('#selected-name').val(name);
        modal.find('#selected-beginTime').val(beginTime);
        modal.find('#selected-endTime').val(endTime);
    })

    $('#delete-popup').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var id = button.data('id') // Extract info from data-* attributes
        var name = button.data('name')

        var modal = $(this)
        modal.find('#delete-id').val(id);
        modal.find('#delete-name').text(name);
    })
</script>
