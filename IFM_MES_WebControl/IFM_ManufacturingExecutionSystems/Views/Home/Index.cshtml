<div id="main" class="text-center">
    <div class="container">
        <h1 class="display-4">IFM Manufacturing Execution System</h1>
        <div id="carousel-simple" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators bg-dark">
                <li data-target="#carousel-simple" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-simple" data-slide-to="1"></li>
                <li data-target="#carousel-simple" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/main-layout.png" alt="main-layout" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/purchase.png" alt="purchase-layout" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/production.png" alt="production-layout" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/quality-control.png" alt="qc-layout" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/shipping.png" alt="shipping-layout" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/server-iot.png" alt="server-iot" />
                </div>
            </div>
            <a class="carousel-control-prev bg-dark" href="#carousel-simple" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next bg-dark" href="#carousel-simple" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>