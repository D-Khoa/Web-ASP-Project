@model IFM_ManufacturingExecutionSystems.Models.MVC.Login

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Login" class="rounded-lg shadow-lg" style="padding:20px;">
            <h1 class="text-center text-shadow-block">Login</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="username" class="control-label">Username</label>
                <input asp-for="username" class="form-control input-bg"/>
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label">Password</label>
                <input type="password" asp-for="password" class="form-control input-bg"/>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="row form-group">
                <a class="btn btn-light col-md-4 offset-md-4" asp-action="Register">Register</a>
                <input class="btn btn-primary col-md-4" type="submit" value="Login" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
