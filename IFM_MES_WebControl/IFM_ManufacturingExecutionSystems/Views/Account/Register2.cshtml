@model IFM_ManufacturingExecutionSystems.Models.MVC.Register

@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Register" class="rounded-lg shadow-lg" style="padding:20px;">
            <h1 class="text-center">Register</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="username" class="control-label">Username</label>
                <input asp-for="username" class="form-control input-bg"/>
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="password" class="control-label">Password</label>
                        <input asp-for="password" class="form-control input-bg" type="password"/>
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="confirmPassword" class="control-label">Confirm Password</label>
                        <input asp-for="confirmPassword" class="form-control input-bg" type="password"/>
                        <span asp-validation-for="confirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="firstname" class="control-label">Firstname</label>
                        <input asp-for="firstname" class="form-control input-bg"/>
                        <span asp-validation-for="firstname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="lastname" class="control-label">Lastname</label>
                        <input asp-for="lastname" class="form-control" style="background:hsl(210,9%,96%);"/>
                        <span asp-validation-for="lastname" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">

                    <div class="form-group">
                        <label asp-for="email" class="control-label">Email</label>
                        <input asp-for="email" class="form-control input-bg" type="email"/>
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="phone" class="control-label">Phone</label>
                        <input asp-for="phone" class="form-control input-bg" type="tel"/>
                        <span asp-validation-for="phone" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <a class="btn btn-light col-md-4 offset-md-4" asp-action="Login">Cancel</a>
                <input class="btn btn-primary col-md-4" type="submit" value="Register" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
