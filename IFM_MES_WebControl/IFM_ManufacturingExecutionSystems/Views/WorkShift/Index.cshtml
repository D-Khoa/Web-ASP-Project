@model IEnumerable<IFM_ManufacturingExecutionSystems.Models.MVC.WorkShift>

@{
    ViewData["Title"] = "Work Shift Master";
}

<h1 class="text-center"> @ViewData["Title"]</h1>
<p class="text-danger">@ViewData["Message"]</p>
<table id="dgv-main" class="table table-striped table-bordered table-sm table-hover" cellspacing="0" width="100%">
    <thead class="text-center">
        <tr>
            <th class="th-sm">
                Shift Code
            </th>
            <th class="th-sm">
                Shift Name
            </th>
            <th class="th-sm">
                Begin Time
            </th>
            <th class="th-sm">
                End Time
            </th>
            <th class="th-sm">
                Update User
            </th>
            <th class="th-sm">
                Update Time
            </th>
            <th class="th-sm">
                Creator
            </th>
            <th class="th-sm">
                Create Time
            </th>
            <th class="th-sm">
                <a class="btn btn-menu" asp-action="Create" data-toggle="modal" data-target="#add-popup">
                    <i class="fas fa-plus" style="color:green;"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.shiftCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.shiftName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.beginTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.endTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.updateUser)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.updateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.creator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.createTime)
                    </td>
                    <td>
                        @*<a asp-action="Details" asp-route-id="@item.shiftID">Details</a> |*@
                        <button class="btn btn-menu" data-toggle="modal" data-target="#update-popup"
                                data-id="@item.shiftID" data-code="@item.shiftCode" data-name="@item.shiftName"
                                data-begintime="@item.beginTime" data-endtime="@item.endTime">
                            <i class="fas fa-edit" style="color:blue;"></i>
                        </button> |
                        <button class="btn btn-menu" data-toggle="modal" data-target="#delete-popup"
                                data-id="@item.shiftID" data-code="@item.shiftCode" data-name="@item.shiftName"
                                data-begintime="@item.beginTime" data-endtime="@item.endTime">
                            <i class="fas fa-trash" style="color:red;"></i>
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>No have any work shift.</tr>
        }
    </tbody>
    </table>

<div id="add-popup" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form asp-action="Create" method="post" class="modal-content rounded-lg shadow-lg">
            <div class="modal-header">
                <h4 class="modal-title">Add new work shift</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">Shift Code</label>
                    <input name="shiftCode" class="form-control input-bg" />
                </div>
                <div class="form-group">
                    <label class="control-label">Shift Name</label>
                    <input name="shiftName" class="form-control input-bg" />
                </div>
                <div class="form-group">
                    <label class="control-label">Begin Time</label>
                    <input type="time" name="beginTime" class="form-control input-bg" />
                </div>
                <div class="form-group">
                    <label class="control-label">End Time</label>
                    <input type="time" name="endTime" class="form-control input-bg" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Confirm</button>
            </div>
        </form>
    </div>
</div>

<div id="update-popup" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form asp-action="Edit" method="post" class="modal-content rounded-lg shadow-lg">
            <div class="modal-header">
                <h4 class="modal-title">Update work shift</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="selected-id" type="hidden" name="shiftID" />
                <div class="form-group">
                    <label class="control-label">Shift Code</label>
                    <input id="selected-code" name="shiftCode" class="form-control input-bg" />
                </div>
                <div class="form-group">
                    <label class="control-label">Shift Name</label>
                    <input id="selected-name" name="shiftName" class="form-control input-bg" />
                </div>
                <div class="form-group">
                    <label class="control-label">Begin Time</label>
                    <input id="selected-beginTime" type="time" name="beginTime" class="form-control input-bg" />
                </div>
                <div class="form-group">
                    <label class="control-label">End Time</label>
                    <input id="selected-endTime" type="time" name="endTime" class="form-control input-bg" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Confirm</button>
            </div>
        </form>
    </div>
</div>

<div id="delete-popup" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form asp-action="Delete" method="post" class="modal-content rounded-lg shadow-lg">
            <div class="modal-header">
                <h4 class="modal-title">Delete work shift</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="delete-id" type="hidden" name="id" />
                <p class="text-body">
                    Are you sure delete the work shift name:
                    <label class="text-danger" id="delete-name" /> ?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger">Confirm</button>
            </div>
        </form>
    </div>
</div>

<script>
    $('#update-popup').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var id = button.data('id') // Extract info from data-* attributes
        var code = button.data('code')
        var name = button.data('name')
        var beginTime = button.data('beginTime')
        var endTime = button.data('endTime')

        var modal = $(this)
        modal.find('#selected-id').val(id);
        modal.find('#selected-code').val(code);
        modal.find('#selected-name').val(name);
        modal.find('#selected-beginTime').val(beginTime);
        modal.find('#selected-endTime').val(endTime);
    })

    $('#delete-popup').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var id = button.data('id') // Extract info from data-* attributes
        var name = button.data('name')

        var modal = $(this)
        modal.find('#delete-id').val(id);
        modal.find('#delete-name').text(name);
    })
</script>